<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.stormpath.examples</groupId>
    <artifactId>stormpath-spring-juiser-origin-example</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <name>Stormpath Spring Juiser Origin Example</name>
    <description>A juiser-enabled backend origin server can automatically read an X-Forwarded-User header with a user
        JWT, validate the JWT, extract the user information, and represent a user object in the origin application.
        This example needs a gateway server to set such a header in the forwarded request - one such gateway example:
        https://github.com/stormpath/stormpath-spring-zuul-gateway-example
    </description>
    <packaging>jar</packaging>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <bouncycastle.version>1.56</bouncycastle.version>
        <juiser.version>0.1.0-SNAPSHOT</juiser.version>
        <logback.version>1.1.7</logback.version>
        <servlet.version>3.1.0</servlet.version>
        <slf4j.version>1.7.21</slf4j.version>
        <spring.boot.version>1.4.3.RELEASE</spring.boot.version>
    </properties>
    <dependencies>
        <dependency>
            <!-- To handle the X-Forwarded-User header: -->
            <groupId>com.stormpath.juiser</groupId>
            <artifactId>juiser-spring-boot-starter</artifactId>
            <version>${juiser.version}</version>
        </dependency>
        <dependency>
            <!-- So juiser can read *.pem public key files to verify the signature of the JWT in the
                 X-Forwarded-User header: -->
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <!-- For the welcome.html Thymeleaf template: -->
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-thymeleaf</artifactId>
            <version>${spring.boot.version}</version>
        </dependency>
        <dependency>
            <!-- For MVC controllers: -->
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>${servlet.version}</version>
        </dependency>
        <dependency>
            <!-- We use SLF4, but some dependencies use commons-logging: -->
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>${slf4j.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <!-- Logging implementation: -->
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring.boot.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
